<h2>New game</h2>
<div class="container">
  <% @letters.each do |letter|%>
  <%=letter %>
  <% end %>
</div>

<form action="/score" method="post" data-turbo="false">
  <label for="longestWord" class="form-label">What is the longest word you can find?</label>
  <input type="text" class="form-control" id="longestWord" name="word">
  <button type="submit" class="btn btn-primary">Play</button>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
